{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "env": { "browser": true },
  "plugins": ["eslint", "jsdoc", "jsx-a11y", "oxc", "promise", "react-perf", "react", "typescript", "unicorn"],
  "categories": {
    "correctness": "error",
    "nursery": "off",
    "pedantic": "error",
    "perf": "error",
    "restriction": "error",
    "style": "error",
    "suspicious": "error"
  },
  "rules": {
    "avoid-new": "off",
    "capitalized-comments": "off",
    "check-tag-names": "warn",
    "class-methods-use-this": "off",
    "consistent-function-scoping": "off",
    "exports-last": "off",
    "filename-case": "off",
    "func-names": "off",
    "func-style": "off",
    "group-exports": "off",
    "id-length": "off",
    "max-classes-per-file": "off",
    "max-dependencies": "off",
    "max-lines-per-function": "off",
    "max-lines": "off",
    "max-params": "off",
    "max-statements": "off",
    "no-async-await": "off",
    "no-await-in-loop": "warn",
    "no-bitwise": "warn",
    "no-console": "off",
    "no-empty-function": "off",
    "no-explicit-any": "off",
    "no-extraneous-class": "warn",
    "no-inline-comments": "off",
    "no-magic-numbers": "off",
    "no-named-export": "off",
    "no-null": "off",
    "no-optional-chaining": "off",
    "no-param-reassign": "off",
    "no-rest-spread-properties": "off",
    "no-ternary": "off",
    "no-undef": "off",
    "no-undefined": "off",
    "no-unused-expressions": "off",
    "no-unused-vars": "off",
    "no-useless-spread": "warn",
    "no-useless-undefined": "off",
    "number-literal-case": "off",
    "numeric-separators-style": "off",
    "prefer-await-to-callbacks": "warn",
    "prefer-default-export": "off",
    "prefer-event-target": "off",
    "require-param": "off",
    "sort-imports": "off",
    "sort-keys": "off"
  }
}
